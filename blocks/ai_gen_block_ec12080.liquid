{% doc %}
  @prompt
    Generate me a table that shows off the following opening times. make it very simple and easy to read at a glimpse. We are open to the public in Cornwall near to Penzance! We offer a wide range of succulents and tropical shrubs, often found in the beautiful neighbouring Tremenheere Sculpture gardens.Typical opening times:Early March to October 31st: 10:30 am - 4:30 pm open every day. Also open on bank holidays.November: 10:30 am - 4:00 pm Friday - SundayDecember: 11:00 am - 4:00 pm Wednesday - SundayClosed for January & February. We also offer a click and collect service. Just select 'Store Pick-Up' at checkout.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-opening-times-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-opening-times__header-{{ ai_gen_id }} {
    margin-bottom: 24px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-opening-times__title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 12px 0;
    font-weight: 600;
  }

  .ai-opening-times__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-opening-times__table-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  .ai-opening-times__table-{{ ai_gen_id }} th,
  .ai-opening-times__table-{{ ai_gen_id }} td {
    padding: {{ block.settings.cell_padding }}px;
    text-align: left;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-opening-times__table-{{ ai_gen_id }} th {
    background-color: {{ block.settings.header_bg_color }};
    color: {{ block.settings.header_text_color }};
    font-weight: 600;
    font-size: {{ block.settings.header_text_size }}px;
  }

  .ai-opening-times__table-{{ ai_gen_id }} td {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.table_text_size }}px;
  }

  .ai-opening-times__table-{{ ai_gen_id }} tbody tr:last-child td {
    border-bottom: none;
  }

  .ai-opening-times__period-{{ ai_gen_id }} {
    font-weight: 600;
  }

  .ai-opening-times__footer-{{ ai_gen_id }} {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid {{ block.settings.border_color }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-opening-times__table-{{ ai_gen_id }} th,
    .ai-opening-times__table-{{ ai_gen_id }} td {
      padding: {{ block.settings.cell_padding | times: 0.7 }}px;
      font-size: {{ block.settings.table_text_size | times: 0.9 }}px;
    }

    .ai-opening-times__table-{{ ai_gen_id }} th {
      font-size: {{ block.settings.header_text_size | times: 0.9 }}px;
    }

    .ai-opening-times__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-opening-times-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-opening-times__header-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-opening-times__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    {% if block.settings.description != blank %}
      <div class="ai-opening-times__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}
  </div>

  <table class="ai-opening-times__table-{{ ai_gen_id }}">
    <thead>
      <tr>
        <th>Period</th>
        <th>Days</th>
        <th>Hours</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="ai-opening-times__period-{{ ai_gen_id }}">Early March - October 31st</td>
        <td>Every day</td>
        <td>10:30 am - 4:30 pm</td>
      </tr>
      <tr>
        <td class="ai-opening-times__period-{{ ai_gen_id }}">November 1st - December 24th</td>
        <td>Friday - Sunday</td>
        <td>10:30 am - 4:00 pm</td>
      </tr>
      <tr>
        <td class="ai-opening-times__period-{{ ai_gen_id }}">January & February</td>
        <td colspan="2">Closed</td>
      </tr>
    </tbody>
  </table>

  {% if block.settings.show_footer_note %}
    <div class="ai-opening-times__footer-{{ ai_gen_id }}">
      {{ block.settings.footer_note }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Opening times",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Visit Us in Cornwall"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>We are open to the public near Penzance! We offer a wide range of succulents and tropical shrubs, often found in the beautiful neighbouring Tremenheere Sculpture gardens.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_footer_note",
      "label": "Show footer note",
      "default": true
    },
    {
      "type": "richtext",
      "id": "footer_note",
      "label": "Footer note",
      "default": "<p><strong>Bank holidays:</strong> We are open on all bank holidays during our main season.<br><strong>Click & Collect:</strong> Just select 'Store Pick-Up' at checkout.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Padding",
      "default": 32
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "cell_padding",
      "min": 8,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Cell padding",
      "default": 16
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Table header background",
      "default": "#eef1ea"
    },
    {
      "type": "color",
      "id": "header_text_color",
      "label": "Table header text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border",
      "default": "#e6e6e6"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 28
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 16
    },
    {
      "type": "range",
      "id": "header_text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Table header size",
      "default": 14
    },
    {
      "type": "range",
      "id": "table_text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Table text size",
      "default": 15
    }
  ],
  "presets": [
    {
      "name": "Opening times"
    }
  ]
}
{% endschema %}
